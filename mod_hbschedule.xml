<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE PUBLIC>
<extension type="module" version="2.5.0" client="site" method="install">
	<!-- Name of the Module -->
	<name>HB Schedule</name> 
	<!-- Name of the Author -->
	<author>Jochen Stehle</author> 
	<!-- Version Date of the Module -->
	<creationDate>27.02.2013</creationDate> 
	<!-- Copyright information -->
	<copyright>All rights reserved by Jochen Stehle</copyright> 
	<!-- License Information -->
	<license></license> 
	<!-- Author's email address -->
	<authorEmail>handballgeislingen@gmail.com</authorEmail> 
	<!-- Author's website -->
	<authorUrl></authorUrl> 
	<!-- Module version number -->
	<version>1.0.0</version> 
	<!-- Description of what the module does -->
	<description>Provides the season standings of a team</description>
	<!-- Listing of all files that should be installed for the module to function -->
	<files>
		<!-- The "module" attribute signifies that this is the main controller file -->
		<filename module="mod_hbschedule">mod_hbschedule.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
	</files>

	<media destination="mod_hbschedule" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
	</media>
	
	<languages>
		<!-- Any language files included with the module -->
		<language tag="de-DE">language/de-DE.mod_hbschedule.ini</language>
	</languages>

	<!-- Optional parameters -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="moduleclass_sfx" 
					type="text" 
					default="" 
					label="LABEL_CLASS_SUFFIX" 
					description="DESC_MOD_SUFFIX">
				</field>
				<field 
					name="@spacer" 
					type="spacer" 
					default="" 
					label="" 
					description="">
				</field>
				<field 
					name="posLeague" 
					type="list" 
					default="above" 
					label="LABEL_MODHBSCHEDULE_POSITIONLEAGUE" 
					description="DESC_MODHBSCHEDULE_POSITIONLEAGUE">
						<option value="above">MODHBSCHEDULE_POSITIONLEAGUE_ABOVE</option>
						<option value="underneath">MODHBSCHEDULE_POSITIONLEAGUE_UNDERNEATH</option>
						<option value="not">MODHBSCHEDULE_POSITIONLEAGUE_NOT</option>
				</field>
				<field 
					name="headline" 
					type="list" 
					default="above" 
					label="LABEL_MODHBSCHEDULE_HEADLINE" 
					description="DESC_MODHBSCHEDULE_HEADLINE">
						<option value="title">MODHBSCHEDULE_HEADLINE_TITLE</option>
						<option value="titleandteam">MODHBSCHEDULE_HEADLINE_TITLEANDTEAM</option>
						<option value="not">MODHBSCHEDULE_HEADLINE_NOT</option>
				</field>
				<field 
					name="timezone" 
					type="list" 
					default="above" 
					label="LABEL_MODHBSCHEDULE_TIMEZONE" 
					description="DESC_MODHBSCHEDULE_TIMEZONE">
						<option value="true">MODHBSCHEDULE_TIMEZONE_USER</option>
						<option value="false">MODHBSCHEDULE_TIMEZONE_SERVER</option>
				</field>
				<field
					name="indicator"
					type="list"
					default="default"
					label="LABEL_MODHBSCHEDULE_INDICATOR"
					description="DESC_MODHBSCHEDULE_INDICATOR">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
				<field
					name="reports"
					type="list"
					default="default"
					label="LABEL_MODHBSCHEDULE_REPORTS"
					description="DESC_MODHBSCHEDULE_REPORTS">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>